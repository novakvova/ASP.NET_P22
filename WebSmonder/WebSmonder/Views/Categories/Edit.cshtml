@model WebSmonder.Models.Category.CategoryEditViewModel

@{
    ViewData["Title"] = "Редагувати";
}

<h1>Редагувати категорію</h1>


<hr />
<div class="row">
    <div class="offset-md-3 col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            @* У цьому блоці виводяться не стандартні помилки *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="ViewImage" type="hidden" />


            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <img src="@Model.ViewImage" width="100%" id="imagePreview" />
                </div>
                <div class="col-md-9">
                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label"></label>
                        <input asp-for="ImageFile" type="file" class="form-control" accept="image/*">
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернути назад</a>
</div>

@section Scripts { 
     @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
     <script>
        document.getElementById("ImageFile").addEventListener("change", (e) => {
            const file = e.target.files[0]; // Перший вибраний файл
            if(file)
                document.getElementById("imagePreview").src=URL.createObjectURL(file);
        })
     </script>
}
