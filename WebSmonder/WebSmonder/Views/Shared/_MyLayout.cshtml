@using WebSmonder.Constants
<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <title>Пасхальні св'ята @ViewData["Title"]</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="/css/cropper.min.css" rel="stylesheet"/>

    <style>
        body {
        padding-top: 3rem;
        padding-bottom: 3rem;
        }
    </style>
</head>
<body>
    <header data-bs-theme="dark">
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-action="Index" asp-controller="Categories">Смаколики</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" 
                                aria-current="page"
                                asp-action="Index" asp-controller="Products">Продукти</a>
                        </li>
                        
                        @if(User.IsInRole(Roles.Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Index" asp-area="Admin">Admin</a>
                            </li>
                        }
                    </ul>
                    @if(User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            
                            @await Component.InvokeAsync("UserLink")

                            <li class="nav-item">
                                @using(Html.BeginForm("Logout", "Account", FormMethod.Post))
                                {
                                    <button class="nav-link">Вихід</button>
                                }
                                
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Login" asp-controller="Account">Вхід</a>
                            </li>
                            <li class="nav-item">
                                    <a class="nav-link" asp-action="Register" asp-controller="Account">Реєстрація</a>
                            </li>
                        </ul>
                    }
                    
                </div>
            </div>
        </nav>
    </header>


	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<script src="~/admin/lib/jquery/dist/jquery.min.js"></script>
	<script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>